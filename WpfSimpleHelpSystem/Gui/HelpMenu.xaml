<UserControl x:Class="WpfSimpleHelpSystem.Gui.HelpMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:wpfSimpleHelpSystem="clr-namespace:WpfSimpleHelpSystem">
    <TreeView Width="320"  ItemsSource="{Binding MenuItems}" SelectedValuePath="Menu_OnSelectedItemChanged">
        <i:Interaction.Behaviors>
            <wpfSimpleHelpSystem:BindableSelectedItemBehavior SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />
        </i:Interaction.Behaviors>
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                <TextBlock Text="{Binding Header}">
                                <Hyperlink Command="{Binding SomeCommand}" />
                </TextBlock>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
