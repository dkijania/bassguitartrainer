<UserControl x:Class="BassNotesMaster.WpfControls.SelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" x:Name="SelectAll" Content="SelectAll"
                                        Grid.ColumnSpan="2" />
        <Button Grid.Row="0" Grid.Column="2" x:Name="UnselectAll" Content="UnselectAll"
                                        Grid.ColumnSpan="2" />
        <TabControl Grid.Row="1" Grid.ColumnSpan="4">
            <TabItem Header="By String">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Content="Add" Grid.Column="3" Grid.Row="0" Name="StringRangeButton" />
                    <Label Grid.Row="1" Grid.Column="0" Content="String:"
                                                   HorizontalAlignment="Right" />
                    <Label Grid.Row="1" Grid.Column="1" Content="Start fret:"
                                                   HorizontalAlignment="Right" />
                    <Label Grid.Row="1" Grid.Column="2" Content="End fret:"
                                                   HorizontalAlignment="Right" />

                    <ComboBox Grid.Column="0" Grid.Row="2" Name="SelectionStringComboBox" />
                    <ComboBox Grid.Column="1" Grid.Row="2" Name="SelectionStartFret" />
                    <ComboBox Grid.Column="2" Grid.Row="2" Name="SelectionEndFret" />
                </Grid>
            </TabItem>
            <TabItem Header="By Scale">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Content="Add" Grid.Column="3" Grid.Row="0" Name="ByScaleAdd" />
                    <CheckBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                                                      Name="AllNotesCheckBox" Content="Use all notes from scale" />
                    <Label Grid.Column="0" Grid.Row="1" Content="Scale Type:" />
                    <Label Grid.Column="1" Grid.Row="1" Content="Root note:" />

                    <ComboBox Grid.Column="0" Grid.Row="2" Name="SelectionScaleType" />
                    <ComboBox Grid.Column="1" Grid.Row="2" Name="SelectionRootNote" />

                    <Label Grid.Column="0" Grid.Row="3" Content="Start Fret:" />
                    <Label Grid.Column="1" Grid.Row="3" Content="End fret:" />
                    <Label Grid.Column="2" Grid.Row="3" Content="Position:" />
                    <Label Grid.Column="3" Grid.Row="3" Content="Fingering:" />

                    <ComboBox Grid.Column="0" Grid.Row="4" Name="ScaleStartFret" />
                    <ComboBox Grid.Column="1" Grid.Row="4" Name="ScaleEndFret" />
                    <ComboBox Grid.Column="2" Grid.Row="4" Name="SelectionScalePosition" />
                    <ComboBox Grid.Column="3" Grid.Row="4" Name="SelectionFingeringStyle" />

                </Grid>
            </TabItem>
            <TabItem Header="Misc">
                <Grid x:Name="MiscGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ToggleButton Grid.Row="0" Content="Apply Octave Coloring" Click="ColorOctaveButton"/>
                    <ToggleButton Grid.Row="1" Content="Apply Equivalent Note Coloring" Click="ColorEquivalentNotes"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
